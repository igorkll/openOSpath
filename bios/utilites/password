local function checkPassword()
    if apis.isPassword() then
        local oldpassword = apis.inputScreen("введите старый пароль")
        if oldpassword == apis.getBiosPassword() then
            return true
        else
            apis.splash("неверный пароль")
            return false
        end
    else
        return true
    end
end
while true do
    local num = apis.select({"PASSWORD UTILE", "back", "bootLockOn", "bootLockOff", "setPassword", "remove"})
    if num == 1 then
        return
    elseif num == 2 then
        if apis.isPassword() then
            apis.setBootPasswordState(true)
            apis.splash("теперь пароль полностью зашишает компьютер")
        else
            apis.splash("для данного действия требуеться устоновленный пароль")
        end
    elseif num == 3 then
        if apis.isPassword() then
            apis.setBootPasswordState(false)
            apis.splash("теперь пароль требуеться только на взод в bios")
        else
            apis.splash("для данного действия требуеться устоновленный пароль")
        end
    elseif num == 4 then
        if checkPassword() then
            local newpassword = apis.inputScreen("введите новый пароль")
            local newpassword2 = apis.inputScreen("подтвердите новый пароль")
            if newpassword == newpassword2 then
                apis.setBiosPassword(newpassword)
                apis.splash("пароль успешно сменен")
            else
                apis.splash("пароли не совпадают")
            end
        end
    elseif num == 5 then
        if apis.isPassword() then
            if checkPassword() then
                apis.removePassword()
                apis.splash("пароль успешно удален")
            end
        else
            apis.splash("для данного действия требуеться устоновленный пароль")
        end
    end
end