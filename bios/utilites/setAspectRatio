while true do
    local select = apis.select({"select acpect ratio", "back", "clear", "1x1", "2x3", "3x2", "1x4", "4x1", "3x4", "4x3", "custom"})
    if select == 1 then
        return
    elseif select == 2 then
        apis.fs.remove(apis.biosresolutioncfgpath)
    elseif select == 3 then
        apis.setConfigResolution(true, 1, 1)
    elseif select == 4 then
        apis.setConfigResolution(true, 3, 2)
    elseif select == 5 then
        apis.setConfigResolution(true, 2, 3)
    elseif select == 6 then
        apis.setConfigResolution(true, 4, 1)
    elseif select == 7 then
        apis.setConfigResolution(true, 1, 4)
    elseif select == 8 then
        apis.setConfigResolution(true, 4, 3)
    elseif select == 9 then
        apis.setConfigResolution(true, 3, 4)
    elseif select == 10 then
        local rx = tonumber(apis.inputScreen("resolition x"))
        if rx then
            local ry = tonumber(apis.inputScreen("resolition y"))
            if ry then
                apis.setConfigResolution(true, rx, ry)
            else
                apis.splash("input error")
            end
        else
            apis.splash("input error")
        end
    end
    apis.setResolution()
end