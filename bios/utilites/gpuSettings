local gpu = apis.gpu
while true do
    local num = apis.select({"gpu settings", "back", "setResolution", "setDepth", "bind"})
    if num == 1 then
        return
    elseif num == 2 then
        local rx = tonumber(apis.inputScreen("resolition x"))
        if rx then
            local ry = tonumber(apis.inputScreen("resolition y"))
            if ry then
                gpu.setResolution(rx, ry)
            else
                apis.splash("input error")
            end
        else
            apis.splash("input error")
        end
    elseif num == 3 then
        local depths = {"1", "4", "8"}
        local depthNum = apis.select({"depth", table.unpack(depths)})
        gpu.setDepth(tonumber(depths[depthNum]))
    elseif num == 4 then
        local names, addresses = apis.parseComponents("screen")
        local num = apis.select({"select screen", "back", table.unpack(names)})
        if num ~= 1 then
            num = num - 1
            local address = addresses[num]
            gpu.bind(address)
            apis.keyboard = component.proxy(address).getKeyboards()[1]
        end
    end
end