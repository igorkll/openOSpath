while true do
    local select = apis.select({"select resolition", "back", "clear", "40x20", "100x50", "80x25", "50x16", "custom"})
    if select == 1 then
        return
    elseif select == 2 then
        apis.fs.remove(apis.biosresolutioncfgpath)
    elseif select == 3 then
        apis.setConfigResolution(false, 40, 20)
    elseif select == 4 then
        apis.setConfigResolution(false, 100, 50)
    elseif select == 5 then
        apis.setConfigResolution(false, 80, 25)
    elseif select == 6 then
        apis.setConfigResolution(false, 50, 16)
    elseif select == 7 then
        local rx = tonumber(apis.inputScreen("resolition x"))
        if rx then
            local ry = tonumber(apis.inputScreen("resolition y"))
            if ry then
                apis.setConfigResolution(false, rx, ry)
            else
                apis.splash("input error")
            end
        else
            apis.splash("input error")
        end
    end
    apis.setResolution()
end